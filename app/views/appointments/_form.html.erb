<div class="appointment_form__wrapper">
  <%= simple_form_for @appointment do |f| %>
    <fieldset>
      <%= f.association :patient, collection: Patient.all %>
      <%= f.input_field :doctor_id, as: :hidden, value: 1 %>
    </fieldset>

    <fieldset>
      <div>
        <label>Status</label>
        <div class='appointment_selects'>
          <%= f.select :status, Appointment.statuses.map { |key, value| [I18n.t("activerecord.attributes.appointment.statuses.#{ key }"), key] } %>
        </div>
      </div>
      <%= f.input :chargeable %>
      <%= f.input :title %>
      <div>
        <label>Cor</label>
        <input type="color" name="appointment[color]" value=<%= @appointment.color || "#429cb6" %>>
      </div>
      <div>
        <label>Come√ßa</label>
        <div class='appointment_selects'>
          <%= f.input_field :start, as: :datetime %>
        </div>
      </div>
      
      <div>
        <label>Termina</label>
        <div class='appointment_selects'>
          <%= f.input_field :end, as: :datetime %>
        </div>
      </div>
    </fieldset>

    <div class="form-actions">
      <%= f.button :submit %>
      <%= link_to 'Delete', 
                  @appointment, 
                  method: :delete, 
                  class: 'btn btn-danger', 
                  data: { confirm: 'Are you sure?' }, 
                  remote: true unless @appointment.new_record? %>
    </div>
  <% end %>
</div>