<% page_title 'Alterar usuário' %>

<div class="appointment_form__wrapper">
  <%= form_for(@user, url: users_path(@user), html: { method: :put }) do |f| %>
    <fieldset>
      <div>
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, autocomplete: "email" %>
      </div>
    </fieldset>

    <fieldset>
      <div>
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </fieldset>

    <fieldset>
      <div>
        <%= f.label :password %> <i>(deixe isso em branco se você não quiser altera-la)</i>
        <%= f.password_field :password, autocomplete: "off" %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> é o mínimo de caracteres</em>
        <% end %>
      </div>
    </fieldset>

    <fieldset>
      <div>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </fieldset>

    <fieldset>
      <div>
        <%= f.label :current_password %> <i>(precisamos da sua senha atual para confirmarmos as alterações)</i>
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>
    </fieldset>

    <div>
      <%= f.submit "Atualizar" %>
    </div>
  <% end %>
</div>